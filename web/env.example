# ViduSec Web Application Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# Server port
PORT=8080

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret Key - MUST be changed in production!
# Generate a strong secret using: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_SECRET

# Session configuration
SESSION_EXPIRATION_HOURS=24
SESSION_IDLE_TIMEOUT_HOURS=2
SESSION_ROTATION_MINUTES=30

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database file path (SQLite)
DATABASE_PATH=data/vidusec.db

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Set to "production" for production environment
ENVIRONMENT=development

# HTTPS settings (for production)
# HTTPS_CERT_PATH=/path/to/cert.pem
# HTTPS_KEY_PATH=/path/to/key.pem

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Content Security Policy settings
CSP_REPORT_URI=/api/csp-report

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limiting settings (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# =============================================================================
# SCANNER CONFIGURATION
# =============================================================================

# Maximum concurrent scans
MAX_CONCURRENT_SCANS=5

# Scan timeout in seconds
SCAN_TIMEOUT_SECONDS=300

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Enable automatic backups
ENABLE_BACKUPS=true

# Backup interval in hours
BACKUP_INTERVAL_HOURS=24

# Backup retention days
BACKUP_RETENTION_DAYS=30
